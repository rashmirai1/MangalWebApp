@model IList<MangalWeb.Model.Transaction.SanctionDisbursementVM>
@using MangalWeb.Model.Transaction
<div class="modal-content">
    <div class="modal-body" style="height:inherit; overflow:auto;">
        <div class="panel-body panel-no-padding" style="height:inherit; overflow:auto;">
            <div id="demo">
                <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover table-fixed-header m0" id="example">
                    <thead>
                        <tr>
                            <th>Customer ID</th>
                            <th>Loan Type</th>
                            <th>Gold Loan No.</th>
                            <th>Loan Date</th>
                            <th>Customer Name</th>
                            <th>PAN No</th>
                            <th>Mobile No</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (SanctionDisbursementVM item in Model)
                        {
                            <tr class="gradeX" style="cursor:pointer;">
                                <td id="@item.ID">@item.CustomerID</td>
                                <td>@item.LoanType</td>
                                <td>@item.LoanAccountNo</td>
                                <td>@item.TransactionDate</td>
                                <td>@item.CustomerName</td>
                                <td>@item.PANNo</td>
                                <td>@item.MobileNo</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div><!-- /.modal-content -->


@model MangalWeb.Model.Utilities.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <title>Mangal Web</title>
    <meta name="keywords" content="HTML5 Bootstrap 3 Admin Template UI Theme" />
    <meta name="description" content="AdminDesigns - SHARED ON THEMELOCK.COM">
    <meta name="author" content="AdminDesigns">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Font CSS (Via CDN) -->
    <link rel='stylesheet' type='text/css' href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800'>
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Roboto:400,500,700,300">
    <!-- Theme CSS -->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/skin/default_skin/css/theme.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/skin/default_skin/css/responsive.css">
    <!-- Admin Forms CSS -->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/admin-tools/admin-forms/css/admin-forms.css">
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/assets/img/favicon.ico">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/my-style.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<body class="external-page sb-l-c sb-r-c">
    <!-- Start: Main -->
    <div id="main" class="animated fadeIn">
        <!-- Start: Content-Wrapper -->
        <section id="content_wrapper">
            <!-- begin canvas animation bg -->
            <div id="canvas-wrapper" class="login-box">
                <img src="~/Content/assets/img/mcfllogo.png" />
            </div>
            <!-- Begin: Content -->
            <section id="content">
                <div class="admin-form theme-info" id="login1">
                    <div class="panel panel-info mt10 br-n">
                        <div class="panel-heading bg_white clearfix p10 ph15">
                            <img class="img1" src="~/Content/assets/img/mcfllogo.png" style="margin-left: 85px;" />
                            <!--<label class="switch block switch-primary pull-left input-align mt10">
                                <input type="checkbox" name="remember" id="remember" checked>
                                <label for="remember" data-on="YES" data-off="NO"></label>
                                <span>Remember me</span>
                            </label>-->
                        </div>
                        <!-- end .form-header section -->
                        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { role = "form" }))
                        {
                            <div class="panel-body bg-light pt15 pl30 pb30 pr30">
                                <div class="row">
                                    <div class="col-sm-12 pr30">
                                        <div class="section">
                                            <label for="Branch" class="field-label text-muted fs18 mb2">Branch</label>
                                            <label for="Branch" class="field prepend-icon mb10">
                                                <div class="section">
                                                    <label class="field select">
                                                        @Html.DropDownListFor(m => m.BranchId, (SelectList)ViewBag.BranchList, "-- Select Branch --", htmlAttributes: new { @class = "gui-input gui-input1", @autofocus = "autofocus" })
                                                        @*<span class="text-danger small">@Html.ValidationMessageFor(m => m.BranchId)</span>*@
                                                        <i class="arrow"></i>
                                                    </label>
                                                </div>
                                            </label>
                                        </div>
                                        <div class="section">
                                            <label for="FinancialYear" class="field-label text-muted fs18 mb2">Financial Year</label>
                                            <label for="FinancialYear" class="field prepend-icon mb10">
                                                <div class="section">
                                                    <label class="field select">
                                                        @Html.DropDownListFor(m => m.FinancialYearId, (SelectList)ViewBag.FinancialYearList, "-- Select Financial Year --", htmlAttributes: new { @class = "gui-input gui-input1" })
                                                        @*<span class="text-danger small">@Html.ValidationMessageFor(m => m.FinancialYearId)</span>*@
                                                        <i class="arrow"></i>
                                                    </label>
                                                </div>
                                            </label>
                                        </div>
                                        <div class="section">
                                            <label for="username" class="field-label text-muted fs18 mb2">User Name</label>
                                            <label for="username" class="field prepend-icon mb10">
                                                @*<input type="text" name="username" id="username" class="gui-input gui-input1" placeholder="Enter username">*@
                                                @Html.TextBoxFor(model => model.UserName, new
                                           {
                                               @class = "gui-input gui-input1",
                                               @placeholder = "Enter User Name",
                                               @autocomplete = "off",
                                               @maxlength = "50"
                                           })
                                                <label for="username" class="field-icon">
                                                    <i class="fa fa-user"></i>
                                                </label>
                                            </label>
                                            @*<span class="text-danger">@Html.ValidationMessageFor(model => model.UserName)</span>*@
                                        </div>
                                        <div class="section">
                                            <label for="username" class="field-label text-muted fs18 mb2">Password</label>
                                            <label for="password" class="field prepend-icon mb10">
                                                @*<input type="password" name="password" id="password" class="gui-input gui-input1" placeholder="Enter password">*@
                                                @Html.PasswordFor(model => model.Password, new { @class = "gui-input gui-input1", @placeholder = "Enter password", @autocomplete = "off", @maxlength = "50" })
                                                <label for="password" class="field-icon">
                                                    <i class="fa fa-lock"></i>
                                                </label>
                                            </label>
                                            @*<span class="text-danger">@Html.ValidationMessageFor(model => model.Password)</span>*@
                                        </div>
                                        <!-- end section -->
                                        <div class="row">
                                            <div class="col-md-2 col-xs-4"></div>
                                                <div class="col-md-4 col-xs-4">
                                                    @*<a href="dashboard.html" class="button btn-primary mr10 pull-left">Login</a>*@
                                                    <button type="submit" class="button btn-primary mr10 pull-left">Login</button>
                                                </div>
                                                <div class="col-md-4 col-xs-4">
                                                    <a href="@Url.Action("Login", "Login")"><button type="button" class="button btn-primary mr10 pull-right">Cancel</button></a>
                                                </div>
                                            <div class="col-md-2 col-xs-4"></div>
                                                <div class="col-md-12 col-xs-12">
                                                    <p class="text-danger mn">@Html.ValidationSummary(false, "", new { @class = "text-danger" })</p>
                                                </div><!--end of col-md-8-->
                                            </div><!--end of row-->
                                        <div class="row">
                                            <div style="text-align:center">
                                                @Html.ActionLink("Forgot Password?", "ForgotPassword", "ForgotPassword")
                                            </div>
                                        </div>
                                    </div><!--end of col-md-12-->
                                </div>
                            </div>
                        }
                        </div>
                    </div>
                </section>
            <!-- End: Content -->
            </section>
            <!-- End: Content-Wrapper -->
        </div>
            <!-- End: Main -->
            <!-- BEGIN: PAGE SCRIPTS -->
            <!-- jQuery -->
                            <script type="text/javascript" src="~/Content/vendor/jquery/jquery-1.11.1.min.js"></script>
                            <script type="text/javascript" src="~/Content/vendor/jquery/jquery_ui/jquery-ui.min.js"></script>
            <!-- Bootstrap -->
                            <script type="text/javascript" src="~/Content/assets/js/bootstrap/bootstrap.min.js"></script>
            <!-- Page Plugins -->
                            <script type="text/javascript" src="~/Content/assets/js/pages/login/EasePack.min.js"></script>
                            <script type="text/javascript" src="~/Content/assets/js/pages/login/rAF.js"></script>
                            <script type="text/javascript" src="~/Content/assets/js/pages/login/TweenLite.min.js"></script>
                            <script type="text/javascript" src="~/Content/assets/js/pages/login/login.js"></script>
            <!-- Theme Javascript -->
                            <script type="text/javascript" src="~/Content/assets/js/utility/utility.js"></script>
                            <script type="text/javascript" src="~/Content/assets/js/main.js"></script>
                            <script type="text/javascript" src="~/Content/assets/js/demo.js"></script>
            <!-- Page Javascript -->
                            <script type="text/javascript">
                                jQuery(document).ready(function () {
                                    "use strict";
                                    // Init Theme Core
                                    Core.init();
                                    // Init Demo JS
                                    Demo.init();
                                    // Init CanvasBG and pass target starting location
                                    CanvasBG.init({
                                        Loc: {
                                            x: window.innerWidth / 2,
                                            y: window.innerHeight / 3.3
                                        },
                                    });
                                });
                            </script>
            <!-- END: PAGE SCRIPTS -->
                            <style>
                                .validation-summary-errors ul {
                                    list-style-type: none;
                                }
                            </style>
                        </body>
                    </html>
@model IList<MangalWeb.Model.Entity.UserDetail>
@using MangalWeb.Model.Entity
<div class="modal-content">
    <div class="modal-body" style="height:inherit; overflow:auto;">
        <div class="panel-body panel-no-padding" style="height:inherit; overflow:auto;">
            <div id="demo">
                <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover table-fixed-header m0" id="example">
                    <thead>
                        <tr>
                            <th>Employee Name</th>
                            <th>Employee Code</th>
                            <th>User Name</th>
                            <th>User Category</th>
                            <th>Mobile No</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (UserDetail item in Model)
                        {
                            <tr class="gradeX" onclick='window.document.location="/User/GetUserMasterById?ID=@item.UserID"'>
                                <td>@item.EmployeeName</td>
                                <td>@item.EmployeeCode</td>
                                <td>@item.UserName</td>
                                <td>@item.tbl_UserCategory.Name</td>
                                <td>@item.MobileNo</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div><!-- /.modal-content -->

